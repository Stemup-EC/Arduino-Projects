#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// Initialize the LCD with I2C Address 0x27
LiquidCrystal_I2C lcd(0x27, 16, 2);

// Custom characters for Smiley ðŸ˜Š and Sad ðŸ˜¢
byte smiley[8] = {
  0b00000,
  0b01010,
  0b00000,
  0b00000,
  0b10001,
  0b01110,
  0b00000,
  0b00000
};

byte sad[8] = {
  0b00000,
  0b01010,
  0b00000,
  0b00000,
  0b01110,
  0b10001,
  0b00000,
  0b00000
};

void setup() {
  lcd.init();           
  lcd.backlight();      
  
  // Create custom characters
  lcd.createChar(0, smiley);
  lcd.createChar(1, sad);
}

void loop() {
  // Display Happy Face ðŸ˜Š
  lcd.clear();
  lcd.setCursor(4, 0);
  lcd.print("Happy");
  lcd.setCursor(10, 0);
  lcd.write(byte(0));  // Print smiley face
  delay(1000);

  // Display Sad Face ðŸ˜¢
  lcd.clear();
  lcd.setCursor(5, 0);
  lcd.print("Sad");
  lcd.setCursor(9, 0);
  lcd.write(byte(1));  // Print sad face
  delay(1000);
}
